
<h1>Major Events</h1>
<table class="table">
    <thead>
    <tr>
        <th>Name</th> 
        <th>Level</th> 
        <th>Date</th> 
        <th>Format</th> 
        <th>Location</th> 
        <th>Players</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var eventItem in Model)
    {
        <tr>
            <td>@eventItem.Name</td> 
            <td>@eventItem.Level</td> 
            <td>@eventItem.Date.ToString()</td> 
            <td>@eventItem.Format.Name</td>
            <td>
                @if (!eventItem.IsOnline && eventItem.Location != null)
                {
                    @(eventItem.Location.Country)
                }
                else
                {
                    @("Online")
                }
            </td> 
            <td> @eventItem.PlayerCount</td>
        </tr>
    }
    </tbody>
</table>